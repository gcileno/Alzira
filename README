#incluir a pasta do node no diretorio usr
	sudo cp -r node-v20.9.0-linux-x64 /usr/

#senha da api
	a649aa72

#alterar diretório para executar a versão do node correta
	export PATH=/usr/node-v20.9.0-linux-x64/bin:$PATH

#iniciar projeto
	npm init -y

#instalar o next no projeto
	npm install next

#instale o estilo Bulma css para deixar a boniteza garantida
	npm install bulma


#rodar a aplicação
	npm run dev

#biblioteca de icone
npm install --save @fortawesome/fontawesome-svg-core @fortawesome/free-solid-svg-icons @fortawesome/react-fontawesome


